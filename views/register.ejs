<!DOCTYPE html>
<html ng-app="myAPP">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title> Image Captioning | Registration</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/templates/plugins/fontawesome-free/css/all.min.css">
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <link rel="stylesheet" href="/templates/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <link rel="stylesheet" href="/templates/dist/css/adminlte.min.css">
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  <style>
    .error-message { color: red; }
    input.ng-dirty.ng-invalid { border-color: red; }
  </style>
</head>
<body ng-controller="adminController" class="hold-transition register-page">
<div class="register-box">
  <div class="register-logo">
    <a href="#"><b>Image</b>Captioning</a>
  </div>

  <div class="card">
    <div class="card-body register-card-body">
      <p class="login-box-msg">Register a new membership</p>
      <form name="myform" novalidate ng-submit="signUp()">
        <div class="input-group mb-3">
          <input name="fullName" ng-model="user.fullName" ng-required="true" ng-minlength="5"  type="text" class="form-control" placeholder="Full name">
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <span class="error-message"  ng-show="myform.fullName.$dirty && myform.fullName.$error.required">
          the first name is mandatory
          </span>
          <span class="error-message"  ng-show="myform.fullName.$dirty && myform.fullName.$error.minlength">
            the first name should be minimum 5 characters
        </span>
        <div class="input-group mb-3">
          <input name="email"  ng-model="user.email" ng-required="true" ng-minlength="5" type="email" class="form-control" placeholder="Email">
          
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <span class="error-message"  ng-show="myform.email.$dirty && myform.email.$error.required">
          the Email is mandatory
        </span>
        <span class="error-message"  ng-show="myform.email.$dirty && myform.email.$error.minlength">
          the email should be minimum 5 character
        </span>
        <div class="input-group mb-3">
          <input name="password" ng-model="user.password" ng-required="true" ng-minlength="5" type="password" class="form-control" placeholder="Password">
          
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <span class="error-message"  ng-show="myform.password.$dirty && myform.password.$error.required">
          the password is mandatory
        </span>
        <span class="error-message"  ng-show="myform.password.$dirty && myform.password.$error.minlength">
          the password should be minimum 2 character
        </span>
        <div class="input-group mb-3">
          <input name="rePassword" ng-model="user.rePassword" ng-required="true" ng-minlength="5" type="password" class="form-control" placeholder="Retype password">
            
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <span class="error-message"  ng-show="myform.rePassword.$dirty && myform.rePassword.$error.required">
          the retype password is mandatory
        </span>
        <span class="error-message"  ng-show="myform.rePassword.$dirty && myform.rePassword.$error.minlength">
          the retype password should be minimum 2 character
        </span>
        <div class="row">
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
          </div>
        </div>
      </form>

      <a href="/login" class="text-center">I already have a membership</a>
    </div>
  </div>
</div>

<script type="text/javascript" src='/js/jslib/angular.min.js'></script>
<script type="text/javascript" src='/js/jslib/angular-route.js'></script>
<script type="text/javascript" src='/js/jslib/angular-resource.js'></script>
<script type="text/javascript" src='/js/app/app.js'></script>
<!-- Angular routes -->
<script type="text/javascript" src='/js/app/controllers/adminController.js'></script>
<script src="/templates/plugins/jquery/jquery.min.js"></script>
<script src="/templates/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/templates/dist/js/adminlte.min.js"></script>
</body>
</html>
